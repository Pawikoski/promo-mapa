{
  "manifest_version": 3,
  "name": "PromoMapa",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "Rozszerzenie, które dodaje widok mapy dla wyników wyszukiwania na portalu OLX. Pokazuje oferty jako markery ze zdjęciem, ceną.",
  "browser_specific_settings": {
    "gecko": {
      "id": "pawikoski@gmail.com"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PromoMapa – Ustawienia"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.olx.pl/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/injected.js"
      ],
      "matches": [
        "https://www.olx.pl/*"
      ]
    }
  ]
}
